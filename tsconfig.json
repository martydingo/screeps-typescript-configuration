{
  "compilerOptions": {
    "module": "esnext",
    "lib": [
      "es2018"
    ],
    "target": "es2018",
    "moduleResolution": "Node",
    "outDir": "dist",
    "baseUrl": "src/",
    "inlineSources": true,
    "sourceMap": true,
    "strict": true,
    "experimentalDecorators": true,
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
  ]
}
